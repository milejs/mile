{
  "name": "@milejs/api",
  "version": "0.1.0",
  "exports": {
    ".": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.mjs",
      "require": "./dist/api.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "rm -rf dist && tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf {dist,.turbo,node_modules}",
    "db:seed": "npx tsx src/scripts/seed.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@milejs/eslint-config": "workspace:*",
    "@milejs/typescript-config": "workspace:*",
    "@types/node": "^22",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.6",
    "tsup": "^8.5.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@better-upload/server": "^3.0.1",
    "@neondatabase/serverless": "^1.0.2",
    "@sindresorhus/slugify": "^3.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.9.9",
    "nanoid": "^5.1.6",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  }
}